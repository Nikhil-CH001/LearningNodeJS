<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSB7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Contact Us - My App</title>
</head>

<body class="w-full h-screen">
    <%- include("./partials/nav") %>

    <section
        class="relative w-full min-h-[90vh] flex flex-col items-center justify-center text-center px-6 lg:px-16 py-16 md:py-32">
        <!-- Background Image -->
        <div class="absolute inset-0 bg-cover bg-center"
            style="background-image: url('https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500');">
        </div>
        <div class="absolute inset-0 bg-black opacity-50"></div>

        <!-- Content -->
        <div class="relative z-10 text-white max-w-2xl">
            <h1 class="text-4xl md:text-6xl font-bold leading-tight">
                Contact Us
            </h1>
            <p class="mt-4 text-lg md:text-xl">
                Weâ€™d love to hear from you! Reach out with any questions or feedback.
            </p>
            <div class="mt-6">
                <a href="#contact-form"
                    class="group px-6 py-3 bg-red-500 hover:bg-red-600 rounded-lg text-lg font-semibold transition inline-flex items-center">
                    Get in Touch
                    <i class="fa-solid fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
                </a>
            </div>
        </div>
    </section>

    <section id="contact-form" class="px-8 py-16 bg-gray-50">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-3xl md:text-4xl font-bold text-center mb-8">Send Us a Message</h1>
            <div class="bg-white rounded-lg shadow-lg p-6 md:p-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Name -->
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                        <input type="text" id="name"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm"
                            placeholder="Your Name">
                    </div>
                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" id="email"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm"
                            placeholder="Your Email">
                    </div>
                    <!-- Subject -->
                    <div class="md:col-span-2">
                        <label for="subject" class="block text-sm font-medium text-gray-700">Subject</label>
                        <input type="text" id="subject"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm"
                            placeholder="Subject">
                    </div>
                    <!-- Message -->
                    <div class="md:col-span-2">
                        <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                        <textarea id="message" rows="5"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm"
                            placeholder="Your Message"></textarea>
                    </div>
                </div>
                <div class="mt-6 text-center">
                    <button
                        class="px-6 py-3 bg-red-500 text-white rounded-lg hover:bg-red-600 transition font-semibold">
                        Send Message
                    </button>
                </div>
            </div>
        </div>
    </section>

    <section class="px-8 py-16">
        <h1 class="text-3xl md:text-4xl font-bold text-center mb-8">Get in Touch</h1>
        <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
            <!-- Address -->
            <div class="bg-white rounded-lg shadow-lg p-6">
                <i class="fa-solid fa-map-marker-alt text-red-500 text-2xl mb-4"></i>
                <h3 class="text-lg font-semibold">Our Address</h3>
                <p class="text-gray-600 mt-2">123 Foodie Lane, Culinary City, FC 12345</p>
            </div>
            <!-- Phone -->
            <div class="bg-white rounded-lg shadow-lg p-6">
                <i class="fa-solid fa-phone text-red-500 text-2xl mb-4"></i>
                <h3 class="text-lg font-semibold">Call Us</h3>
                <p class="text-gray-600 mt-2">+1 (123) 456-7890</p>
            </div>
            <!-- Email -->
            <div class="bg-white rounded-lg shadow-lg p-6">
                <i class="fa-solid fa-envelope text-red-500 text-2xl mb-4"></i>
                <h3 class="text-lg font-semibold">Email Us</h3>
                <p class="text-gray-600 mt-2">support@myapp.com</p>
            </div>
        </div>
    </section>

</body>

</html>